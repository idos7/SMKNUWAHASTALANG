<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentDetailGuru"
    android:background="@drawable/home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20sdp"
        android:padding="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/profil_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Detail Guru"
            android:fontFamily="@font/tulisan"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_70sdp"
            android:layout_below="@+id/fotoguru"
            app:cardCornerRadius="@dimen/_12sdp"
            android:backgroundTint="#1CAE81"
            android:id="@+id/dataguru">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_7sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:id="@+id/txtNamaGuru"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="NIP"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NIP"
                        android:textSize="@dimen/_15sdp"
                        android:id="@+id/txtNIP"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Jabatan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jabatan"
                        android:id="@+id/txtJabatan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Pendidikan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendidikan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:id="@+id/txtPendidikan"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Agama"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agama"
                        android:id="@+id/txtAgama"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:id="@+id/txtAlamat"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp">
                    <TextView
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="wrap_content"
                        android:text="Mata Pelajaran"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matematika"
                        android:id="@+id/txtMapel"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tulisan"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>