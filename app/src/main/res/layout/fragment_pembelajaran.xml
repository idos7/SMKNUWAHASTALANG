<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home"
    tools:context=".fragmenguru.PembelajaranFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PEMBELAJARAN"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:textAlignment="center"
        android:fontFamily="@font/tulisan"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMateri"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                app:cardBackgroundColor="@color/abuabu"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_100sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/absen_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_gravity="center_vertical"
                        android:text="MATERI"
                        android:fontFamily="@font/tulisan"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />
                    <ImageButton
                        android:id="@+id/TambahMateri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tambah"
                        android:backgroundTint="#00000000"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvUlangan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardBackgroundColor="@color/abuabu"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/absen_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginVertical="@dimen/_30sdp"
                        android:fontFamily="@font/tulisan"
                        android:text="ULANGAN \n HARIAN"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />
                    <ImageButton
                        android:id="@+id/TambahUlangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tambah"
                        android:backgroundTint="#00000000"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cvTugas"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardBackgroundColor="@color/abuabu"
                app:cardCornerRadius="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/absen_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_marginVertical="@dimen/_30sdp"
                        android:text="TUGAS"
                        android:fontFamily="@font/tulisan"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />
                    <ImageButton
                        android:id="@+id/TambahTugas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tambah"
                        android:backgroundTint="#00000000"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>